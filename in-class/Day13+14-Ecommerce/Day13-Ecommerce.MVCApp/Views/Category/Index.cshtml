@{
}

@model IEnumerable<CategoryResponseModel>

<h1>Category List</h1>
<a href="/category/create">Add Category</a>
<table class="table table-bordered table-hover">
    <thead>
        <tr>
            <th>Id</th>
            <th>Name</th>
            <th>Options</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.Id</td>
                <td>@item.Name</td>
                <td>
                    <a asp-action="Edit" asp-controller="Category" asp-route-id="@item.Id">
                        Edit
                    </a> |
                    <a href="/category/delete/@item.Id">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>